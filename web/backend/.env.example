# Server Configuration
PORT=3001
NODE_ENV=development

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host/velomind

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-in-production

